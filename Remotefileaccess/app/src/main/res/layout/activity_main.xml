<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical" >
    <TextView
        android:id="@+id/tvconn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="#FF3A32"
        />


    <TextView
        android:id="@+id/desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0 - Exit , 1- Create new file , 2 - Create Directory , 3 - Read Files and Subdirectories , 4 - Create Non-deletable Directory , 5 - Delete Empty Directory\n"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#00ccff"
        />

    <TextView
        android:id="@+id/tvip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ip address: "
        android:textSize="15sp"
        />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_ip"
        android:text="192.168.177.26"
        android:layout_height="45dp" />


    <TextView
        android:id="@+id/tvopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose option: "
        android:textSize="15sp"
        />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_opt"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/tvpath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directory or File name: "
        android:textSize="15sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_dname"
        android:layout_height="45dp" />

      <TextView
          android:id="@+id/tvcmd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Multiple commands:(optional) "
          android:textSize="15sp"
          />

      <EditText
          android:layout_width="match_parent"
          android:id="@+id/et_cmd"
          android:layout_height="45dp" />

    <Button
        android:id="@+id/bSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send" />

    <Button
        android:id="@+id/bConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Connect"
        />   <!--android:background="#E17F27"-->


            <TextView
                android:id="@+id/tvsts"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="STATUS: "
                android:textSize="15sp"
                android:textColor="#37FF77"
                />

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/scrollview" >
            <TextView
                android:id="@+id/tvstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="15sp"
                android:textColor="#32E817"
                />
      </ScrollView>
      <!--   android:background="" -->

        <TextView
            android:id="@+id/tvlg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LOG: "
            android:textSize="15sp"
            android:textColor="#FF3A32"
            />

        <TextView
            android:id="@+id/tvlog"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:textSize="15sp"
            android:textColor="#FF3A32"
                      />

  </LinearLayout>
</androidx.core.widget.NestedScrollView>

</LinearLayout>
